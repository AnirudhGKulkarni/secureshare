rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Admin approvals uploads
    match /admin-approvals/{allPaths=**} {
      // Allow authenticated users to upload and read their files
      // For quick testing, you may temporarily change write to 'true'
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Default: deny other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
